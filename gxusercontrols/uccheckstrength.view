<style>
.Short {
    width: 100%;
    margin-top: 5px;
    height: 3px;
    color: #dc3545;
    font-weight: 500;
    font-size: 12px;
}
.Weak {
    width: 100%;
    margin-top: 5px;
    height: 3px;
    color: #ffc107;
    font-weight: 500;
    font-size: 12px;
}
.Good {
    width: 100%;
    margin-top: 5px;
    height: 3px;
    color: #28a745;
    font-weight: 500;
    font-size: 12px;
}
.Strong {
    width: 100%;
    margin-top: 5px;
    height: 3px;
    color: #d39e00;
    font-weight: 500;
    font-size: 12px;
}
</style>
<script>
$(document).ready(function () {
    $('#{{gxTpr_InputPassword}}{{InputPassword}}').keyup(function () {
		var pass = $('#{{gxTpr_InputPassword}}{{InputPassword}}').val();
		//Fuente: https://www.iteramos.com/pregunta/35695/eliminar-todos-los-espacios-en-blanco-del-texto;
		pass = pass.replace(/ /g,'');
		
		$('#{{gxTpr_InputPassword}}{{InputPassword}}').val(pass);
        $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').html(checkStrength(pass))
    })
    function checkStrength(password) {
		var icon = '<span style="font-size: 1.5em; color: Green;">  <i class="fas fa-check-circle"></i></span>';
		var icon_white = '<span style="font-size: 1.5em; color: White;">  <i class="fas fa-check-circle"></i></span>';
        var strength = 0
        if (password.length < 6) {
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').removeClass()
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').addClass('Short')
			var mensaje1 = $('#{{gxTpr_Restriccion1}}{{Restriccion1}}').html();
			mensaje1 = mensaje1.replace(icon, "" );
			mensaje1 = mensaje1.replace(icon_white, "" );
			$('#{{gxTpr_Restriccion1}}{{Restriccion1}}').html(icon_white + mensaje1);
			
			mensaje1 = $('#{{gxTpr_Restriccion2}}{{Restriccion2}}').html();
			mensaje1 = mensaje1.replace(icon, "" );
			mensaje1 = mensaje1.replace(icon_white, "" );
			$('#{{gxTpr_Restriccion2}}{{Restriccion2}}').html(icon_white + mensaje1);
			
			mensaje1 = $('#{{gxTpr_Restriccion3}}{{Restriccion3}}').html();
			mensaje1 = mensaje1.replace(icon, "" );
			mensaje1 = mensaje1.replace(icon_white, "" );
			$('#{{gxTpr_Restriccion3}}{{Restriccion3}}').html(icon_white + mensaje1);
			
            return 'Muy corta'
        }
        if (password.length > 7) {
			strength += 1
			var mensaje1 = $('#{{gxTpr_Restriccion1}}{{Restriccion1}}').html();
			mensaje1 = mensaje1.replace(icon, "" );
			mensaje1 = mensaje1.replace(icon_white, "" );
			
			$('#{{gxTpr_Restriccion1}}{{Restriccion1}}').html(icon + mensaje1)
		}
        // If password contains both lower and uppercase characters, increase strength value.
        //if (password.match(/([a-z].*[A-Z])|([A-Z].*[a-z])/)) 
		if (password.match(/([A-Z])/)) 
		{
			strength += 1
			var mensaje = $('#{{gxTpr_Restriccion2}}{{Restriccion2}}').html();
			mensaje = mensaje.replace(icon, "" );
			mensaje = mensaje.replace(icon_white, "" );
			
			$('#{{gxTpr_Restriccion2}}{{Restriccion2}}').html(icon + mensaje)
		}
		else
		{
			var mensaje = $('#{{gxTpr_Restriccion2}}{{Restriccion2}}').html();
			mensaje = mensaje.replace(icon, "" );
			mensaje = mensaje.replace(icon_white, "" );

			$('#{{gxTpr_Restriccion2}}{{Restriccion2}}').html(icon_white + mensaje)
		}
        // If it has numbers and characters, increase strength value.
        //if (password.match(/([a-zA-Z])/) && password.match(/([0-9])/)) strength += 1
        // If it has one special character, increase strength value.
        if (password.match(/([!,%,&,@,#,$,^,*,?,_,~])/) || password.includes("@")) 
        {
			strength += 1
			var mensaje = $('#{{gxTpr_Restriccion3}}{{Restriccion3}}').html();
			mensaje = mensaje.replace(icon, "" );
			mensaje = mensaje.replace(icon_white, "" );
			
			$('#{{gxTpr_Restriccion3}}{{Restriccion3}}').html(icon + mensaje)
		}
		else
		{
			var mensaje = $('#{{gxTpr_Restriccion3}}{{Restriccion3}}').html();
			mensaje = mensaje.replace(icon, "" );
			mensaje = mensaje.replace(icon_white, "" );
console.log("NO special character")
			$('#{{gxTpr_Restriccion3}}{{Restriccion3}}').html(icon_white + mensaje)
		}
		// If it has two special characters, increase strength value.
        //if (password.match(/(.*[!,%,&,@,#,$,^,*,?,_,~].*[!,%,&,@,#,$,^,*,?,_,~])/)) strength += 1
		
        // Calculated strength value, we can return messages
        // If value is less than 2
        if (strength < 2) {
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').removeClass()
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').addClass('Weak')
			$('#{{gxTpr_CumplePassword}}{{CumplePassword}}').val(0);
			
            return 'DÃ©bil'
	    } else if (strength == 2) {
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').removeClass()
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').addClass('Good')
			$('#{{gxTpr_CumplePassword}}{{CumplePassword}}').val(0);
            return 'Buena'
	    } else {
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').removeClass()
            $('#{{gxTpr_strengthMessage}}{{strengthMessage}}').addClass('Strong')
			$('#{{gxTpr_CumplePassword}}{{CumplePassword}}').val(1);
            return 'Fuerte'
        }
    }
});
</script>